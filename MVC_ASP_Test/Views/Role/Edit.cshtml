@using Microsoft.AspNetCore.Identity
@model IdentityRole
@{
    ViewData["Title"] = "Edit Role";
}

<h1>Edit Role</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="Name" class="col-form-label">Role Name</label>
            <input asp-for="Name" type="text" class="form-control" />
            <input asp-for="Id" type="hidden" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
            <button type="submit" class="btn btn-primary">Update</button>
            <br />
        </form>
        <div class="form-group my-3">
            @* add the Role id to the AddOrRemoveUser action *@
            <a class="btn btn-warning" asp-action="AddOrRemoveUser" asp-controller="Role" asp-route-id="@Model.Id">AddOrRemoveUser(s)</a>
        </div>
        <a asp-action="Index" asp-controller="Role">Back to List</a>
    </div>
</div>