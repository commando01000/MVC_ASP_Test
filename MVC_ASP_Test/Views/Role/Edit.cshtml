@using Microsoft.AspNetCore.Identity
@model IdentityRole
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="Name" class="col-form-label">Role Name</label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
            <div class="form-group my-3">
                <a class="btn btn-warning" asp-action="AddOrRemoveUser(s)" asp-controller="Role" asp-route-id="@Model.Id"></a>
            </div>
        <button type="submit" class="btn btn-primary">Update</button>
        </form>
        <a asp-action="Index" asp-controller="Role">Back to List</a>
    </div>
</div>