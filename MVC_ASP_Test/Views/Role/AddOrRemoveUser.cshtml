@model List<UserRoleViewModel>

@{
    ViewData["Title"] = "AddOrRemoveUser";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    var RoleId = ViewBag.RoleId;
}

<h1>Add Or Remove Users</h1>

<form class="my-3" method="post" asp-action="AddOrRemoveUser" asp-route-id="@RoleId">
    @for (var i = 0; i < Model.Count; i++)
    {
        <div class="form-group">
            <!-- Checkbox for IsSelected -->
            <input asp-for="@Model[i].IsSelected" />

            <label asp-for="@Model[i].UserName">
                @Model[i].UserName
            </label>

            <!-- Hidden fields for UserId and UserName -->
            <input type="hidden" asp-for="@Model[i].UserId" />
            <input type="hidden" asp-for="@Model[i].UserName" />
        </div>
    }

    <div class="my-3">
        <input type="submit" class="btn btn-success" />
        <a asp-action="Edit" asp-controller="Role" asp-route-id="@RoleId" class="btn btn-light">Cancel</a>
    </div>
</form>
