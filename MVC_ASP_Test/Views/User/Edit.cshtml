@using Company.Database.Access
@model ApplicationUser
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" asp-route-id="@Model.Id">
            <input type="hidden" asp-for="@Model.PasswordHash" />
            <div class="form-group">
                <label asp-for="@Model.FirstName" class="col-form-label"></label>
                <input asp-for="@Model.FirstName" type="text" name="FirstName" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.LastName" class="col-form-label"></label>
                <input asp-for="@Model.LastName" type="text" name="LastName" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="col-form-label"></label>
                <input asp-for="@Model.Email" type="text" name="Email" />
            </div> 
            <button class="btn btn-success" type="submit">Save</button>
        </form>
        <a asp-action="Index" asp-controller="User" asp-route-id="@Model.Id">Back to list</a>
    </div>
</div>